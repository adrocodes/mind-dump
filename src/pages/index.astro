---
import Layout from "../layouts/Layout.astro";

const articles = await Astro.glob("./article/*.mdx");
const thoughts = await Astro.glob("./thought/*.mdx");
---

<Layout title="Welcome to random.adro.codes">
	<main class="prose prose-invert prose-2xl">
		<h2>Articles</h2>
		<div>
			{
				articles.map((article) => (
					<a
						href={article.url}
						class="no-underline flex mb-4 border-b hover:bg-blue-600 hover:pl-4 transition-all"
					>
						{article.frontmatter.title}
					</a>
				))
			}
		</div>
		<h2>Thoughts</h2>
		<div>
			{
				thoughts.map((article) => (
					<a
						href={article.url}
						class="no-underline flex mb-4 border-b hover:bg-purple-600 hover:pl-4 transition-all"
					>
						{article.frontmatter.title}
					</a>
				))
			}
		</div>
	</main>
</Layout>

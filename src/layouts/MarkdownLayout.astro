---
const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
  </head>
  <body class="bg-slate-950 p-6">
    <header class="mb-5">
      <a href="/" class="italic text-slate-600">home</a>
    </header>
    <main class="prose prose-invert md:prose-2xl prose-blue pb-24">
      <slot />
    </main>
  </body>
</html>
